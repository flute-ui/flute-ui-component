{
  "name": "@flute-io/react-block",
  "version": "0.0.0-semantically-released",
  "description": "A <Block /> component that encapsulates some common behaviour that is often needed by UI components that are styled using [BEM](http://getbem.com/)",
  "scripts": {
    "build": "webpack",
    "build:dev": "NODE_ENV=development npm run build -- --watch",
    "clean": "git clean -fxd -e .idea -e .env",
    "commit": "npm run lint && npm run test && git cz",
    "coverage": "nyc npm t",
    "coverage:generate": "nyc --reporter lcov npm t",
    "coverage:check": "nyc check-coverage --statements 100 --branches 90 --functions 100 --lines 100",
    "coverage:report:codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "coverage:report:coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "coverage:view": "npm run coverage:generate && open coverage/lcov-report/index.html",
    "test": "mocha ./test/.setup.js --colors ./test/*.spec.js",
    "test:watch": "npm t -- -w",
    "lint": "esw src test --fix",
    "lint:watch": "npm run lint -- -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flute-io/react-block"
  },
  "keywords": [
    "react",
    "block",
    "react-block",
    "BEM"
  ],
  "author": "Ifeanyi Isitor <ify.iyo@gmail.com> (http://ify.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flute-io/react-block/issues"
  },
  "homepage": "https://github.com/flute-io/react-block",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-eslint": "^7.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-airbnb": "^2.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.14",
    "codeclimate-test-reporter": "^0.4.0",
    "commitizen": "^2.8.6",
    "condition-circle": "^1.5.0",
    "coveralls": "^2.11.14",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.6.0",
    "eslint-plugin-standard": "^2.0.1",
    "eslint-watch": "^2.1.14",
    "ghooks": "^1.3.2",
    "jsdom": "^9.8.3",
    "mocha": "^3.1.2",
    "nyc": "^8.3.2",
    "open-cli": "^1.0.5",
    "postcss-px2rem": "^0.3.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "semantic-release": "^4.3.5",
    "string-argv": "0.0.2",
    "webpack": "^1.13.3",
    "webpack-merge": "^0.15.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm run coverage:generate && npm run coverage:check"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
