{
  "name": "@flute-ui/component",
  "version": "0.1.1",
  "description": "A component that encapsulates the common behaviour amongst components that follow the flute-ui components methodology",
  "main": "lib/Component.js",
  "scripts": {
    "rollup": "rollup -c",
    "rollup:watch": "nodemon -x 'rollup -c'",
    "rollup:all": "npm run rollup && NODE_ENV=production npm run rollup",
    "clean": "git clean -fxd -e .idea -e .env",
    "commit": "npm run lint && npm run test && git cz",
    "coverage": "nyc npm t",
    "coverage:generate": "nyc --reporter lcov npm t",
    "coverage:check": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "coverage:report:codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "coverage:report:coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "coverage:view": "npm run coverage:generate && open coverage/lcov-report/index.html",
    "test": "mocha ./test/.setup.js --colors ./test/*.spec.js",
    "test:watch": "npm t -- -w",
    "lint": "esw src test --fix",
    "lint:watch": "npm run lint -- -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flute-io/flute-ui-component"
  },
  "keywords": [
    "react",
    "component",
    "flute-ui",
    "flute-ui-component",
    "BEM"
  ],
  "author": "Ifeanyi Isitor <ify.iyo@gmail.com> (http://ify.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flute-io/flute-ui-component/issues"
  },
  "homepage": "https://github.com/flute-io/flute-ui-component",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-eslint": "^7.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-airbnb": "^2.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.14",
    "codeclimate-test-reporter": "^0.4.0",
    "commitizen": "^2.8.6",
    "condition-circle": "^1.5.0",
    "coveralls": "^2.11.14",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.6.0",
    "eslint-plugin-standard": "^2.0.1",
    "eslint-watch": "^2.1.14",
    "ghooks": "^1.3.2",
    "jsdom": "^9.8.3",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "nyc": "^9.0.1",
    "open-cli": "^1.0.5",
    "postcss-px2rem": "^0.3.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.4.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-uglify": "^1.0.1",
    "semantic-release": "^6.3.2",
    "string-argv": "0.0.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm run coverage:generate && npm run coverage:check && npm run rollup:all"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
